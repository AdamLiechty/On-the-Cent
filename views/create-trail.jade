extends layout

block content
  .navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        a.navbar-brand(href="#") On the Cent
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown") Trail Links
              b.caret
            ul.dropdown-menu
              li
                a(href="/create-trail?" + adminQuery) Admin
              li
                a(href="/trail?" + trailQuery) Hunt
              li
                a(href="/trail?" + adminQuery) Cheat
  .container
    .create
      p.lead Set up your trail (!!NOT IMPLEMENTED!!)
      p Don't lose this admin URL!
      form(method="POST")
        fieldset
          - for (var i = 0; i < pennies.length; ++i) {
            .form-group
              label(for="penny-year-" + i) Penny's year:
              input.form-control(type="number" value= pennies[i].year id="penny-year=" + i )
            .form-group
              label(for="penny-caption-" + i) Caption:
              input.form-control(type="text" value= pennies[i].caption id="penny-caption-" + i)
          - }
        fieldset
          .form-group
            label(for="photos") Add photos of places where pennies are hidden to your trail:
            input.form-control(type="file" multiple="multiple" id="photos")
        fieldset
          .form-group
            input.btn.btn-lg.btn-success(type="submit" value="Update")